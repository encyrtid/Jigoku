<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Jigoku.Core" namespace="Jigoku.Core.Entities">
	<class name="Person">
		<id name="Id">
			<column name="Id"/>
			<generator class="sequence">
				<param name="sequence">Person_Id_seq</param>
			</generator>
		</id>
		<property name="NickName" not-null="true"/>
		<property name="Password" column="Passwd" not-null="true"/>
		<property name="PrimaryMail" column="email" not-null="true"/>
		<property name="UserPhoto" />
		<list name="Contacts" cascade="all" inverse="true">
			<key column="Id" on-delete="cascade"/>
			<index column="PersonId"/>
			<one-to-many class="Contacts"/>
		</list>
		<set name="Project" table="Person_Project" cascade="all">
			<key column="PersonId"/>
			<many-to-many column="ProjectId" class="Project"/>
		</set>
		<many-to-one name="IdTo" class="Person"/>
	</class>
</hibernate-mapping>